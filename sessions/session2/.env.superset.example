# Superset Configuration
SUPERSET_SECRET_KEY=change_this_to_a_random_secret_key_at_least_32_characters_long
REDIS_PASSWORD=redispass

# PostgreSQL for Superset (for storing Superset metadata)
SUPerset_DB_HOST=superset_db
SUPerset_DB_PORT=5432
SUPerset_DB_USER=superset
SUPerset_DB_PASSWORD=superset
SUPerset_DB_NAME=superset

# Retail DB (for connecting to retail data)
# This is used when you add database in Superset
RETAIL_DB_HOST=postgres
RETAIL_DB_PORT=5432
RETAIL_DB_USER=postgres
RETAIL_DB_PASSWORD=postgres
RETAIL_DB_NAME=retail_db
